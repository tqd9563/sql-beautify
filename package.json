{
  "name": "sql-beautify",
  "displayName": "sql-beautify",
  "description": "beautify sql customizely",
  "publisher": "yuiko",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sql-beautify.helloWorld",
    "onLanguage:sql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tqd9563/sql-beautify"
  },
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "SQL Beautify",
      "properties": {
        "sql-beautify.dialect": {
          "type": "string",
          "default": "sql",
          "description": "SQL dialect (sql, mysql, postgresql, hive, bigquery, etc.)"
        },
        "sql-beautify.uppercase": {
          "type": "boolean",
          "default": false,
          "description": "Convert keywords to uppercase"
        },
        "sql-beautify.indent": {
          "type": "string",
          "default": "    ",
          "description": "Indentation string (e.g. 2 spaces)"
        },
        "sql-beautify.customRules": {
          "type": "array",
          "default": [],
          "description": "Custom regex replacement rules",
          "items": {
            "type": "object",
            "properties": {
              "regex": {
                "type": "string",
                "description": "Regular expression pattern"
              },
              "replacement": {
                "type": "string",
                "description": "Replacement string"
              },
              "flags": {
                "type": "string",
                "default": "gm",
                "description": "Regex flags"
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "sql-beautify.helloWorld",
        "title": "SQL Beautify: Hello World"
      }

    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "sql-formatter": "^15.6.12"
  }
}
